
<table class="table table-hover">
         
              <thead>
                  <tr class="header-row">
                    <th class="col-md-1" data-col="tracklist">#</th>
                    <th class="col-md-3" data-col="songName">Name</th>
                    <th class="col-md-2" data-col="artist">Artist</th>
                    <th class="col-md-3" data-col="album">Album</th>
                    <th class="col-md-1" data-col="length"><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span> </th>
                    <th class="col-md-1" data-col="rating"></th>
                    <th class="col-md-1" data-col="rating"><span class="glyphicon glyphicon-heart"aria-hidden="true"></span></th>
                  </tr>
                </thead>

                <tbody>
  {{#each this}}
                
                  <tr class="song-row clickable-row" height="60">
                        <td class="col-md-1" data-col="tracklist" >
                          <span class="content">
                            1
                            <button aria-label="Play: song" data-id= "play" class="aria-play-button btn-link"><span class="glyphicon glyphicon-play" aria-hidden="true"></span> 
                            </button>
                          </span>
                        </td>
                        <td class="col-md-3" data-col="songName">
                          <span class="content">{{name}}
                            
                          </span>
                        </td>
                        <td class="col-md-2 artist" data-col="artist">
                          <span class="content">
                            {{artists}}
                          </span>
                        </td>
                        <td class="col-md-3 album-name" data-col="album">
                          <span class="content">
                            {{album.name}}
                          </span>
                        </td>
                         <td class="col-md-1"  data-col="length">
                          <span class="content">
                          {{album.year}}
                          </span>
                        </td>
                        <td class="col-md-1" data-col="delete">
                          
                             <button aria-label="Play: song" data-id= "play" class="aria-play-button btn-link"><span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
                             </button> 
                             <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                              <li><a>delete</a></li>
                        
                        </td>
                         <td class="col-md-1 rating" data-col="rating">
                          
                             <button aria-label="Play: song" data-id= "play" class="aria-play-button btn-link"><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></button>
                          
                        </td>
                  </tr>
                  
                  {{/each}}
                  </tbody>

    </table>